<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="https://web-production-d2eb.up.railway.app/<%= booking.payments.proofPayment %>"
          alt="image"
          style="width: 100%; display: block"
        />
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <tr>
              <th>Name Member</th>
              <td>
                <%= booking.memberId.firstName %> <%= booking.memberId.lastName
                %>
              </td>
            </tr>
            <tr>
              <th>Total</th>
              <td>$ <%= booking.total %></td>
            </tr>
            <tr>
              <th>Bank From</th>
              <td><%= booking.payments.bankFrom %></td>
            </tr>
            <tr>
              <th>Title</th>
              <td><%= booking.itemId.title %></td>
            </tr>
            <% if(booking.payments.status == 'Waiting') { %>
            <tr>
              <td colspan="2">
                <div class="row ml-auto">
                  <form
                    action="/admin/booking/<%= booking.id %>/accepted?_method=PUT"
                    method="post"
                  >
                    <button type="submit" class="btn btn-success btn-sm">
                      <i class="fas fa-check"></i> Confirmation
                    </button>
                  </form>
                  <form
                    action="/admin/booking/<%= booking.id %>/rejected?_method=PUT"
                    method="post"
                    class="ml-2"
                  >
                    <button type="submit" class="btn btn-danger btn-sm">
                      <i class="fas fa-times"></i> Reject
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
