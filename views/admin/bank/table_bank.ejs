<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#add-modal"
    >
      <i class="fa fa-plus"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Bank Name</th>
            <th>Bank Account Number</th>
            <th>Name</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < bank.length; i++) { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= bank[i].nameBank %></td>
            <td><%= bank[i].nomorRekening %></td>
            <td><%= bank[i].name %></td>
            <td>
              <img
                src="https://web-production-d2eb.up.railway.app/<%= bank[i].imageUrl %>"
                alt="imageUrl"
                width="70px"
              />
            </td>
            <td>
              <form
                action="/admin/bank/<%= bank[i].id %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn-warning btn-circle btn-sm button-update"
                  data-id="<%= bank[i].id %>"
                  data-name="<%= bank[i].name %>"
                  data-namebank="<%= bank[i].nameBank %>"
                  data-nomerrekening="<%= bank[i].nomerRekening %>"
                  ><i class="fa fa-edit"></i
                ></a>
                <button
                  type="submit"
                  class="btn-danger btn-circle btn-sm button-delete"
                >
                  <i class="fa fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
